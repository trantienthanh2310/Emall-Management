<form method="POST">
    @Html.AntiForgeryToken()
    <h6>Reset email</h6>
    <p style=" background-color: #9cbe91; color: #fff; border-radius: 2px;">
        Please check your email and click on the provided link to reset your email
    </p>
    <div class="form-outline mb-4">
        <input type="email" id="input-email" class="form-control" placeholder="email" name="email" />
        <label class="form-label" for="input-email" style="">email</label>
    </div>
    <div>
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    </div>
    <div class="d-flex align-items-center justify-content-center pb-4">
        <button class="btn-hover btn btn-outline-danger" tyle="submit">Reset Password</button>
    </div>
</form>
@using AuthServer.Models
@using Microsoft.AspNetCore.Authentication
@model SignInModel
<form method="POST" autocomplete="off">
    <input autocomplete="false" name="hidden" type="text" style="display: none" />
    @Html.AntiForgeryToken()
    <p style="font-family: Roboto;">Please login to your account</p>
    <div class="form-outline mb-4">
        <input type="text" id="input-username" class="form-control" placeholder="Username" name="Username" value="@Model?.Username" autocomplete="off" />
        <label class="form-label" for="input-username" style="font-family: Roboto;">Username</label>
    </div>  

    <div class="form-outline mb-4">
        <input type="password" id="input-password" class="form-control" placeholder="Password" name="Password" value="@Model?.Password" autocomplete="off" />
        <label class="form-label" for="input-password" style="font-family: Roboto;">Password</label>
    </div>

    <div class="text-center pt-1 mb-3 pb-1">
        <button class="btn btn-sign-in btn-block fa-lg gradient-custom-2 mb-3" type="submit">Sign In</button>
        <a class="forgot-password" href="/auth/forgot">Forgot password?</a>
    </div>
    <div>
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    </div>
    <div class="d-flex align-items-center justify-content-center pb-4">
        <p class="mb-0 me-2">Don't have an account?</p>
        <a class="btn btn-sign-up" href="/auth/signup">Sign Up</a>
    </div>
</form>